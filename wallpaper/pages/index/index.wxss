.swiper {
  position: relative;
  width: 100%;
  height: 800rpx;
}

.swiper .change-img {
  width: 560rpx;
  height: 800rpx;
  border-radius: 40rpx;
  margin: 0 10rpx;
  background: #b4b4b4;
  display: block;
}

.swiper-item-con {
  position: relative;
  transform-origin: 50% 50%;
  transform: scale(0.9);
  transition: all 0.1s ease;
}

.swiper-active {
  transform: scale(1);
}

.left-btn {
  position: absolute;
  left: 0;
  width: 26rpx;
  background: #fff;
  border-radius: 0 30rpx 30rpx 0;
  color: #1f81e3;
  font-size: 26rpx;
  text-align: center;
  font-weight: bold;
  padding: 20rpx 15rpx;
  box-shadow: 0 0 40rpx #c6d8ff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  transform: translateX(-80rpx);
  overflow: auto;
}

.right-btn {
  position: absolute;
  right: 0;
  width: 44rpx;
  background: #fff;
  border-radius: 30rpx 0 0 30rpx;
  color: #1f81e3;
  font-size: 26rpx;
  line-height: 30rpx;
  text-align: center;
  font-weight: bold;
  padding: 30rpx 0;
  box-shadow: 0 0 40rpx #c6d8ff;
  transition: all 0.2s ease;
  transform: translateX(80rpx);
  overflow: auto;
}

.swiperOther {
  transition: all 0.2s ease;
}

.bottomTip-num {
  font-size: 18rpx;
