.image-con {
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.change-img-area {
  position: relative;
  width: 100%;
  height: 100vh;
  text-align: center;
  z-index: 1000;
  transition: opacity 0.6s ease;
}

.change-img-area2 {
  position: absolute;
  width: 100%;
  height: 100vh;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  transition: opacity 0.7s ease;
}

.change-img-view {
  width: 560rpx;
  height: 800rpx;
}

.change-img-view2 {
  width: 560rpx;
  height: 800rpx;
  transition: all 0.6s ease;
}

.change-img-for {
  position: absolute;
  top: 0;
  left: 0;
  width: 560rpx;
  height: 800rpx;
}

.change-img {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  transform-origin: 50% 0;
}

.change-img-area2 .change-img-for:nth-of-type(1) {
  z-index: 99;
  transform: scale(1) translateY(0);
}

.change-img-area2 .change-img-for:nth-of-type(2) {
  z-index: 98;
  transform: scale(0.9) translateY(-60rpx);
}

.change-img-area2 .change-img-for:nth-of-type(3) {
  z-index: 97;
  transform: scale(0.8) translateY(-136rpx);
}

.change-img-area2 .change-img-for:nth-of-type(4) {
  z-index: 96;
  transform: scale(0.7) translateY(-232rpx);
}

.change-img-title {
  position: absolute;
  bottom: 60rpx;
  left: 120rpx;
  font-size: 24rpx;
  z-index: 101;
  color: #fff;
  text-align: left;
  transition: all 0.6s ease;
  width: 510rpx;
}

.change-img-author {
  position: absolute;
  bottom: 20rpx;
  left: 87rpx;
  font-size: 24rpx;
  z-index: 101;
  padding: 0 35rpx;
  color: #fff;
  text-align: left;
  transition: all 0.6s ease;
}

.change-img-time {
  position: absolute;
  bottom: 20rpx;
  right: 120rpx;
  font-size: 24rpx;
  z-index: 101;
  padding: 2rpx 12rpx 4rpx;
  background: rgba(255, 255, 255, 0.384);
  color: #fff;
  border-radius: 20rpx 20rpx 20rpx 0;
  transition: all 0.2s ease;
}

.top {
  position: absolute;
  top: 34rpx;
}

.top image {
  display: block;
  width: 240rpx;
  height: 84rpx;
}

.bottom {
  position: absolute;
  bottom: 34rpx;
  width: 450rpx;
  font-size: 22rpx;
  text-align: center;
  color: #b4b4b4;
}

.bottomTip {
  position: absolute;
  bottom: 110rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 50rpx 0 50rpx 50rpx;
  color: #1f81e3;
  font-size: 26rpx;
  line-height: 50rpx;
  text-align: center;
  font-weight: bold;
  box-shadow: 0 0 40rpx #c6d8ff;
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.menu-group {
  position: absolute;
  top: 34rpx;
  right: 50rpx;
  width: 100%;
}

.menu {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  text-align: center;
  font-size: 22rpx;
  color: #1f81e3;
  font-weight: bold;
  z-index: 1002;
  box-shadow: 0 0 40rpx #c6d8ff;
  padding: 8rpx 8rpx 10rpx 10rpx;
  border-radius: 20rpx;
  background: #fff;
}

.menu image {
  display: block;
  margin: 0 auto;
  width: 64rpx;
  height: 64rpx;
}

.menu-popup {
  display: none;
  position: absolute;
  right: 30rpx;
  top: 105rpx;
  background: #fff;
  box-shadow: 0 0 40rpx #c6d8ff;
  border-radius: 20rpx 0 20rpx 20rpx;
  padding: 10rpx 0;
  z-index: 1004;
  animation: in 200ms linear;
  animation-fill-mode: forwards;
  opacity: 0;
  overflow: auto;
}

@-webkit-keyframes in {
  from {
    right: 30rpx;
    opacity: 0;
  }

  to {
    right: 0rpx;
    opacity: 1;
  }
}

@keyframes in {
  from {
    right: 30rpx;
    opacity: 0;
  }

  to {
    right: 0rpx;
    opacity: 1;
  }
}

.menu-popup view {
  position: relative;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #1f81e3;
  padding: 10rpx 20rpx;
  text-align: center;
  overflow: hidden;
}

.menu-popup view:active {
  background: #1f81e33f;
}

.menu-popup image {
  float: left;
  display: block;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.originalContact {
